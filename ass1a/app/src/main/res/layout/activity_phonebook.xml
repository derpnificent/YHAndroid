<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".a">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add contact"
        android:id="@+id/ChangeRed"
        android:onClick="contactAdd"
        android:layout_below="@+id/et_home_email"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/et_name"
        android:hint="Name"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_mobile_phone"
        android:layout_alignStart="@+id/et_mobile_phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_home_phone"
        android:hint="Home Phone"
        android:layout_below="@+id/et_mobile_phone"
        android:layout_alignLeft="@+id/et_mobile_phone"
        android:layout_alignStart="@+id/et_mobile_phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_home_email"
        android:hint="Home Email"
        android:layout_below="@+id/et_work_email"
        android:layout_alignLeft="@+id/et_work_email"
        android:layout_alignStart="@+id/et_work_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_work_email"
        android:hint="Work Email"
        android:layout_below="@+id/et_home_phone"
        android:layout_alignLeft="@+id/et_home_phone"
        android:layout_alignStart="@+id/et_home_phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_mobile_phone"
        android:hint="Mobile Phone"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
